<div class="d-flex mb-3 justify-content-between">
  <h1 id="titles">Gêneros</h1>
    <%= link_to "+ Novo", new_movie_genre_path, :class => "btn btn-danger my-4" %>
</div>

<table class="table">
  <thead>
    <tr style="font-size: 18px">
      <th class="col-md-3" scope="col">Nome</th>
      <th class="col-md-3" scope="col">Criado em</th>
      <th class="col-md-3" style="text-align: end" id="acao" scope="col">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @movie_genres.each do |movie_genre| %>
      <%= render movie_genre %>
    <% end %>
  </tbody>

</table>