<div id="<%= dom_id movie %>">
  <tr>
    <td><%= treat_value(movie.title) %></td>
    <td><%= treat_value(movie.director.name) %></td>
    <td><%= treat_value(movie.movie_genre.name) %></td>
    <td><%= format_data_no_time(treat_value(movie.published_at)) %></td>

    <td style="text-align: end">
      <%= link_to image_tag("icons/editIcon.png"), edit_movie_path(movie) %>
      <a style="cursor: pointer" data-bs-toggle="modal" data-bs-target="#myModal<%= movie.id %>">
        <%= image_tag("icons/deleteIcon.png") %>
      </a>
    </td>
  </tr>

  <div class="modal" id="myModal<%= movie.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <span class='bi bi-exclamation-triangle-fill' style="color: #FF375F"></span>
                <h1>Atenção</h1>
            </div>
            <div class="modal-body">
                <h4>Deseja realmente excluir este item?</h4>
                <p>Após a exclusão não será mais possivel recuperar os dados!</p>
            </div>
            <div class="modal-footer">
                <%= button_to "Cancelar", movie, :id => "btn_modal_cancel", :class => "btn btn" %>
                <%= button_to "Excluir", movie_path(movie), method: :delete, :id => "btn_modal_delete", :class => "btn btn-danger" %>
            </div>
        </div>
    </div>
  </div>

</div>